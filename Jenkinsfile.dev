pipeline {
    agent any

    environment {
        NODE_VERSION = '22.14.0'
        DATABASE_URL = credentials('DATABASE_URL')
        NEXT_PUBLIC_API_URL = 'https://api.hearts-and-paws.dev'
        NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY = credentials('NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY')
        CLERK_SECRET_KEY = credentials('CLERK_SECRET_KEY')
        DEPLOY_DIR = 'E:\\jenkinnodes\\workspace\\Deployment to Dev\\hearts-and-paws'
        APP_NAME = 'hearts-and-paws'
    }

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    echo "Pulling latest changes from branch-dev"
                    bat 'git pull origin branch-dev'
                }
            }
        }

        stage('Set Up Environment') {
            steps {
                script {
                    echo "Creating .env file..."
                    bat """
                    cd hearts-and-paws
                    echo DATABASE_URL=${DATABASE_URL} > .env
                    echo CLERK_SECRET_KEY=${CLERK_SECRET_KEY} >> .env
                    echo NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=${NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY} >> .env
                    echo NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL} >> .env
                    type .env
                    """
                }
            }
        }
        stage('Install Node.js') {
            steps {
                script {
                    echo "Ensuring Node.js 22.14.0 is installed..."
                    bat """
                    node -v
                    npm -v
                    """
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    echo "Installing dependencies..."
                    bat """
                    cd hearts-and-paws
                    npm install
                    """
                }
            }
        }

        stage('Generate Prisma Client') {
            steps {
                script {
                    echo "Generating Prisma Client..."
                    bat """
                    cd hearts-and-paws
                    npx prisma generate
                    """
                }
            }
        }

        stage('Run Prisma Migrations') {
            steps {
                script {
                    echo "Applying Prisma Migrations..."
                    bat """
                    cd hearts-and-paws
                    npx prisma migrate deploy
                    """
                }
            }
        }

        stage('Build Next.js') {
            steps {
                script {
                    echo "Building Next.js app..."
                    bat """
                    cd hearts-and-paws
                    npm run build
                    """
                }
            }
        }

        stage('Start Application') {
            steps {
                script {
                    echo "Starting Next.js server..."
                    bat """
                    cd hearts-and-paws
                    start /B npm start > nextjs.log 2>&1
                    """
                }
            }
        }
    }

    post {
        success {
            echo "✅ Deployment to DEV successful!"
        }
        failure {
            echo "❌ Deployment to DEV failed!"
        }
    }
}
