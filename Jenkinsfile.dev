pipeline {
    agent any

    environment {
        NODE_VERSION = '22.14.0'
        DATABASE_URL = credentials('POSTGRES_DATABASE_URL')  // Secure database URL
        NEXT_PUBLIC_API_URL = 'https://api.hearts-and-paws.dev'  // Example public API
        NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY = credentials('NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY')
        CLERK_SECRET_KEY = credentials('CLERK_SECRET_KEY')
        DEPLOY_DIR = '/var/www/hearts-and-paws'
        APP_NAME = 'hearts-and-paws'
    }

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    echo "Pulling latest changes from dev-branch"
                    sh 'git pull origin dev-branch'
                }
            }
        }

        stage('Set Up Environment') {
            steps {
                script {
                    echo "Creating .env file..."
                    sh '''
                    echo "DATABASE_URL=${DATABASE_URL}" > .env
                    echo "NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL}" >> .env
                    cat .env  # Debugging: Show the env file (remove if needed)
                    '''
                }
            }
        }

        stage('Install Node.js') {
            steps {
                script {
                    echo "Ensuring Node.js 22.14.0 is installed..."
                    sh '''
                    curl -fsSL https://deb.nodesource.com/setup_22.x | sudo -E bash -
                    sudo apt install -y nodejs
                    '''
                    sh 'node -v && npm -v'
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    echo "Installing dependencies..."
                    sh 'npm install'
                }
            }
        }

        stage('Generate Prisma Client') {
            steps {
                script {
                    echo "Generating Prisma Client..."
                    sh 'npx prisma generate'
                }
            }
        }

        stage('Run Prisma Migrations') {
            steps {
                script {
                    echo "Applying Prisma Migrations..."
                    sh 'npx prisma migrate deploy'
                }
            }
        }

        stage('Build Next.js') {
            steps {
                script {
                    echo "Building Next.js app..."
                    sh 'npm run build'
                }
            }
        }

        stage('Start Application (Temporary for Local Server)') {
            steps {
                script {
                    echo "Starting Next.js server..."
                    sh 'nohup npm start > nextjs.log 2>&1 &'
                }
            }
        }
    }

    post {
        success {
            echo "✅ Deployment to DEV successful!"
        }
        failure {
            echo "❌ Deployment to DEV failed!"
        }
    }
}
